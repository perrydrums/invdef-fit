<h1 class="display-4"><%= __('Platoons') %></h1>
<a href="/admin/platoons/add" class="btn btn-success mb-4"><%= __('New platoon') %></a>

<table class="table table-striped">
    <thead>
        <tr>
            <th><%= __('Name') %></th>
            <th><%= __('Company') %></th>
            <th><%= __('Eenheden') %></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <% platoons.forEach(platoon => { %>

            <tr>
                <td><%= platoon.name %></td>
                <td><%= platoon.company.name %></td>
                <td><%= platoon.units.length %></td>
                <td>
                    <a href="/admin/platoons/edit/<%= platoon.id %>" class="btn btn-primary"><%= __('Edit') %></a>
                    <form class="d-inline" action="/platoon/delete" method="post">
                        <input type="hidden" name="id" value="<%= platoon.id%>">
                        <input type="submit" value="<%= __('Delete') %>" class="btn btn-danger" />
                    </form>
                </td>
            </tr>

        <% }) %>
    </tbody>
</table>
