<form method="post" action="/admin/formulas/update/<%= formula.id %>">

    <div class="form-group">
        <label for="field">Veld</label>
        <div class="tooltip-icon" data-toggle="tooltip" data-placement="right" title="<%= __('info:formulas:field') %>"></div>
        <select name="field" id="field" class="form-control">
            <option value="bmi">BMI</option>
            <option value="coreStability">Core Stabiliteit</option>
        </select>
    </div>

    <div class="form-group">
        <label for="formula">Formule</label>
        <div class="tooltip-icon" data-toggle="tooltip" data-placement="right" title="<%= __('info:formulas:formula') %>"></div>
        <input type="text" name="formula" class="form-control" value="<%= formula.formula %>" />
    </div>

    <input type="submit" value="Opslaan" class="btn btn-primary" />

</form>
