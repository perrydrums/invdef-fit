<h1>Resultaten van <b><%= anatomy.firstName + ' ' + anatomy.lastName%></b></h1>
<code>Peoplesoft ID: <%= anatomy.peoplesoft%></code>
<hr class="mb-4">

<div class="row">
    <div class="col-sm">
        <div class="mb-4 d-flex">
            <h2>Lichaam</h2>
            <h2 class="ml-auto"><a href="/anatomies/edit/<%= anatomy.id %>" class="btn btn-primary">Bewerken</a></h2>
        </div>

        <table class="table table-striped">
            <tr>
                <td>Naam</td>
                <td><%= anatomy.firstName + ' ' + anatomy.lastName %></td>
            </tr>
            <tr>
                <td>Eenheid</td>
                <td><%= anatomy.unit %></td>
            </tr>
            <tr>
                <td>Peloton</td>
                <td><%= anatomy.platoon %></td>
            </tr>
            <tr>
                <td></td>
                <td></td>
            </tr>
            <tr>
                <td>Lengte</td>
                <td><%= anatomy.height %> cm</td>
            </tr>
            <tr>
                <td>Gewicht</td>
                <td><%= anatomy.weight %> kg</td>
            </tr>
            <tr>
                <td>BMI</td>
                <td><%= anatomy.bmi %></td>
            </tr>
            <tr>
                <td>Vetpercentage</td>
                <td><%= anatomy.fat %>%</td>
            </tr>
        </table>
    </div>
    <div class="col-sm">
        <% if (strength) {%>
            <div class="mb-4 d-flex">
                <h2>Krachttraining</h2>
                <h2 class="ml-auto"><a href="/strength/edit/<%= strength.id %>" class="btn btn-primary">Bewerken</a></h2>
            </div>
            <table class="table table-striped">
                <thead class="thead-dark">
                <tr>
                    <th></th>
                    <th>Herh.</th>
                    <th>KG</th>
                    <th>Resultaat</th>
                    <th>Score</th>
                </tr>
                </thead>
                <tbody>
                <tr>
                    <td>Shoulder Press</td>
                    <td><%= strength.shoulderPressReps %></td>
                    <td><%= strength.shoulderPressWeight %></td>
                    <td><%= strength.shoulderPressReps * strength.shoulderPressWeight %></td>
                    <td></td>
                </tr>
                <tr>
                    <td>Squat</td>
                    <td><%= strength.squatReps %></td>
                    <td><%= strength.squatWeight %></td>
                    <td><%= strength.squatReps * strength.squatWeight %></td>
                    <td></td>
                </tr>
                <tr>
                    <td>Pull Up</td>
                    <td><%= strength.pullUpReps %></td>
                    <td></td>
                    <td></td>
                    <td></td>
                </tr>
                <tr>
                    <td>Stabiliteit</td>
                    <td></td>
                    <td></td>
                    <td><%= strength.coreStability %></td>
                    <td></td>
                </tr>
                </tbody>
            </table>
        <% } else { %>
            <div class="mb-4 d-flex">
                <h2>Krachttraining</h2>
                <h2 class="ml-auto"><a href="/strength/add/<%= anatomy.id %>" class="btn btn-primary">Toevoegen</a></h2>
            </div>
        <% } %>
    </div>
</div>
