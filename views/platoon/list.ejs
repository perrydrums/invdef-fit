<h1 class="display-4"><%= __('Platoons') %></h1>
<table class="table table-striped">
    <% platoons.forEach(platoon => { %>

        <tr>
            <td><%= platoon.name %></td>
            <td>
                <a href="/platoon/<%= platoon.id %>" class="btn btn-primary"><%= __('View') %></a>
                <form class="d-inline" action="/platoon/delete" method="post">
                    <input type="hidden" name="id" value="<%= platoon.id %>">
                    <input type="submit" value="<%= __('Delete') %>" class="btn btn-danger" />
                </form>
            </td>
        </tr>

    <% }) %>
</table>
