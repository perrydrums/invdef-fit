<h1 class="display-4"><%= __('Companies') %></h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th><%= __('Name') %></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <% companies.forEach(company => { %>

            <tr>
                <td><%= company.name %></td>
                <td>
                    <a href="/company/edit/<%= company.id %>" class="btn btn-primary"><%= __('Edit') %></a>
                    <form class="d-inline" action="/company/delete" method="post">
                        <input type="hidden" name="id" value="<%= company.id%>">
                        <input type="submit" value="<%= __('Delete') %>" class="btn btn-danger" />
                    </form>
                </td>
            </tr>

        <% }) %>
    </tbody>
</table>
