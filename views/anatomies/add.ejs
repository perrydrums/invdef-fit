<form method="post" action="/anatomies/create" class="mb-5">

    <div class="form-group">
        <label for="firstName">Voornaam</label>
        <input type="text" name="firstName" class="form-control" />
    </div>

    <div class="form-group">
        <label for="lastName">Achternaam</label>
        <input type="text" name="lastName" class="form-control" />
    </div>

    <div class="form-group">
        <label for="unit">Eenheid</label>
        <input type="text" name="unit" class="form-control" />
    </div>

    <div class="form-group">
        <label for="platoon">Peloton</label>
        <input type="text" name="platoon" class="form-control" />
    </div>

    <div class="form-group">
        <label for="peoplesoft">Peoplesoft nummer</label>
        <input type="text" name="peoplesoft" class="form-control" />
    </div>

    <hr/>

    <div class="form-group">
        <label for="height">Lengte (in cm)</label>
        <input type="number" name="height" class="form-control" step="0.01" id="height"  />
    </div>

    <div class="form-group">
        <label for="weight">Gewicht (in kg)</label>
        <input type="number" name="weight" class="form-control" step="0.01" id="weight" />
    </div>

    <div class="form-group">
        <label for="bmi">BMI</label>
        <input type="number" name="bmi" class="form-control" step="0.01" id="bmi" readonly />
    </div>

    <div class="form-group">
        <label for="fat">Vetpercentage</label>
        <input type="number" name="fat" class="form-control" step="0.01" />
    </div>

    <input type="submit" value="Opslaan" class="btn btn-primary" />

</form>
